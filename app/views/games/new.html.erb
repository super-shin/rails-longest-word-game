<div class="container text-center">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col">
      <h1 class="m-3">New game</h1>
      <div class="m-5">
        <span class="badge bg-primary p-4 fs-2"><%= @pick[0] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[1] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[2] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[3] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[4] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[5] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[6] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[7] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[8] %></span>
        <span class="badge bg-primary p-4 fs-2"><%= @pick[9] %></span>
      </div>

      <form action="/score" method="post" data-turbo="false" class="m-5">
        <label for="entry" class="mb-3">What is the longest word you can find?</label>
        <div class="d-flex justify-content-center align-items-center">
          <input type="text" name="entry" class="form-control" style="max-width: 300px;">
          <button class="btn btn-outline-dark">Play</button>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
    </div>
  </div>
</div>
